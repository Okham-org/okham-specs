{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://okham.org/schemas/onc/0.2.0/navigation.schema.json",
  "title": "Open Navigation Contract",
  "description": "DRAFT v0.2.0 schema for ONC navigation manifests.",
  "type": "object",
  "properties": {
    "navigation": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "version": { "type": "string" }
      },
      "required": ["id", "version"],
      "additionalProperties": true
    },
    "screens": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "componentRef": { "type": "string" },
          "intent": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["id", "title", "componentRef"],
        "additionalProperties": true
      }
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "screenId": { "type": "string" },
          "params": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" }
              },
              "required": ["name", "type"],
              "additionalProperties": true
            }
          },
          "guards": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["path", "screenId"],
        "additionalProperties": true
      }
    },
    "nav": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "route": { "type": "string" },
              "guards": { "type": "array", "items": { "type": "string" } },
              "intent": { "type": "string" }
            },
            "required": ["id", "label", "route"],
            "additionalProperties": true
          }
        }
      },
      "required": ["items"],
      "additionalProperties": true
    },
    "guards": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "policyRef": { "type": "string" }
        },
        "required": ["id", "policyRef"],
        "additionalProperties": true
      }
    }
  },
  "required": ["navigation", "screens", "routes", "nav"],
  "additionalProperties": true
}
