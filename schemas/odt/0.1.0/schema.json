{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://okham.org/schemas/odt/0.1.0/schema.json",
  "title": "ODT Tokens Definition",
  "description": "DRAFT v0.1.0 schema for Open Design Tokens (ODT).",
  "type": "object",
  "required": ["odt", "id", "name", "description", "tokens"],
  "properties": {
    "odt": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*\\.[a-z][a-z0-9-]*\\.[a-z][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "tokens": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/token" }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "$defs": {
    "token": {
      "type": "object",
      "required": ["id", "type", "value"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "type": {
          "type": "string",
          "enum": ["color", "typography", "spacing", "radius", "elevation", "motion", "opacity"]
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" },
            {
              "type": "object",
              "required": ["alias"],
              "properties": {
                "alias": {
                  "type": "string",
                  "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "experimental"]
        },
        "extensions": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  }
}
