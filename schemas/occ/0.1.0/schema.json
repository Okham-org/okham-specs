{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://okham.org/schemas/occ/0.1.0/schema.json",
  "title": "OKHAM Capability Contract",
  "description": "JSON Schema for OCC v1.0.0",
  "type": "object",
  "required": [
    "contractVersion",
    "id",
    "name",
    "version",
    "description",
    "subjects"
  ],
  "properties": {
    "contractVersion": {
      "type": "string",
      "const": "capability.contract.v1",
      "description": "Contract version identifier"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
      "maxLength": 63,
      "description": "Unique capability identifier"
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "description": "Human-readable capability name"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "description": "Multiline description for LLM context"
    },
    "visibility": {
      "type": "string",
      "enum": ["public", "private"],
      "default": "private"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "category": {
      "type": "string"
    },
    "public": {
      "type": "boolean",
      "default": false
    },
    "icon": {
      "type": "string"
    },
    "domainsOwned": {
      "type": "array",
      "items": { "type": "string" }
    },
    "crossDomainPublishes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["domain", "reason"],
        "properties": {
          "domain": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    },
    "streams": {
      "type": "object",
      "properties": {
        "reads": {
          "type": "array",
          "items": { "type": "string" }
        },
        "writes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "kv": {
      "type": "object",
      "properties": {
        "reads": {
          "type": "array",
          "items": { "type": "string" }
        },
        "writes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "interestGroups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "members"],
        "properties": {
          "name": { "type": "string" },
          "members": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "subjects": {
      "type": "object",
      "required": ["publishes"],
      "properties": {
        "publishes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "examples": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "subscriptions": {
      "type": "object",
      "properties": {
        "nats": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["pattern"],
            "properties": {
              "pattern": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "jetstream": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["subject", "stream"],
            "properties": {
              "subject": { "type": "string" },
              "stream": { "type": "string" },
              "durable": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    },
    "http": {
      "type": "object",
      "properties": {
        "basePath": {
          "type": "string",
          "pattern": "^/api/[a-z][a-z0-9-]*$"
        },
        "targetBase": {
          "type": "string",
          "pattern": "^https?://[^\\s]+$"
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["method", "path"],
            "properties": {
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS", "HEAD"]
              },
              "path": { "type": "string" },
              "purpose": { "type": "string" },
              "response": { "type": "string" }
            }
          }
        }
      }
    },
    "ui": {
      "type": "object",
      "properties": {
        "nav": {
          "type": "object",
          "properties": {
            "group": { "type": "string" },
            "order": { "type": "number" },
            "icon": { "type": "string" }
          }
        },
        "pages": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "path", "title"],
            "properties": {
              "id": { "type": "string" },
              "path": { "type": "string" },
              "title": { "type": "string" },
              "layout": { "type": "string" },
              "blocks": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["component"],
                  "properties": {
                    "component": { "type": "string" },
                    "props": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "mcp": {
      "type": "object",
      "properties": {
        "tools": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "description"],
            "properties": {
              "id": { "type": "string" },
              "description": { "type": "string" },
              "method": { "type": "string" },
              "path": { "type": "string" },
              "params": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "type"],
                  "properties": {
                    "name": { "type": "string" },
                    "type": { "type": "string" },
                    "required": { "type": "boolean" },
                    "description": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "imports": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "snippet": { "type": "string" },
          "alias": { "type": "string" }
        }
      }
    },
    "limits": {
      "type": "object",
      "properties": {
        "timeout": { "type": "number" },
        "rateLimit": { "type": "string" }
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "required": { "type": "boolean" }
      }
    }
  },
  "additionalProperties": false
}
