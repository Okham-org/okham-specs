{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://okham.org/schemas/osr/0.1.0/schema.json",
  "title": "OSR Snippet Definition",
  "description": "DRAFT v0.1.0 schema for Open Snippet Registry (OSR).",
  "type": "object",
  "required": ["osr", "id", "name", "description", "snippets"],
  "properties": {
    "osr": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*\\.[a-z][a-z0-9-]*\\.[a-z][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "snippets": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/snippet" }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "$defs": {
    "snippet": {
      "type": "object",
      "required": ["id", "name", "version", "language", "content"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "language": {
          "type": "string",
          "minLength": 1
        },
        "content": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "required": ["format", "body"],
              "properties": {
                "format": { "type": "string" },
                "body": { "type": "string" }
              },
              "additionalProperties": false
            }
          ]
        },
        "description": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" }
        },
        "compatibility": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  }
}
